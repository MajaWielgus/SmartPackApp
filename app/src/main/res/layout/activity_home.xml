<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Pole na miejsce docelowe -->
    <EditText
        android:id="@+id/editDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Miejsce docelowe (np. Włochy)"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintMargin="16dp"/>

    <!-- Pole na liczbę dni -->
    <EditText
        android:id="@+id/editDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Liczba dni"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDestination"
        app:layout_constraintMargin="16dp"/>

    <!-- Przycisk do zatwierdzenia -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pobierz prognozę pogody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDays"
        app:layout_constraintMargin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
